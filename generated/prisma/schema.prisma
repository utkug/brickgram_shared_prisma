generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id              String     @id @default(uuid())
  username        String     @unique
  name            String
  email           String     @unique
  password        String
  created_at      DateTime   @default(now())
  updated_at      DateTime   @default(now()) @updatedAt
  profile_picture String?
  banner          String?
  bio             String?
  location        String?
  is_private      Boolean    @default(false)
  is_verified     Boolean    @default(false)
  status          UserStatus @default(ACTIVE)
  role            UserRole   @default(USER)

  followedBy Follows[] @relation("FollowedBy")
  following  Follows[] @relation("Following")

  blockedBy Blocks[] @relation("BlockedBy")
  blocking  Blocks[] @relation("Blocking")

  postAuthor Posts[] @relation("postAuthor")

  commentUser Comments[] @relation("commentUser")
  likeUser    Likes[]    @relation("likeUser")

  receivedNotifications Notifications[] @relation("NotificationReceiver")
  sentNotifications     Notifications[] @relation("NotificationSender")
}

model Follows {
  id           String       @id @default(uuid())
  follower_id  String
  following_id String
  created_at   DateTime     @default(now())
  status       FollowStatus @default(ACCEPTED)

  follower  Users @relation("FollowedBy", fields: [follower_id], references: [id], onDelete: Cascade)
  following Users @relation("Following", fields: [following_id], references: [id], onDelete: Cascade)

  @@unique([follower_id, following_id]) // Örnek olarak ["Anakin", "Padme"] bağlantısı sadece bir kere bulunabilir DB'de
}

model Blocks {
  id         String   @id @default(uuid())
  blocker_id String
  blocked_id String
  created_at DateTime @default(now())

  blocker  Users @relation("BlockedBy", fields: [blocker_id], references: [id], onDelete: Cascade)
  blocking Users @relation("Blocking", fields: [blocked_id], references: [id], onDelete: Cascade)

  @@unique([blocker_id, blocked_id])
}

model Posts {
  id         String   @id @default(uuid())
  author_id  String
  post_text  String
  image_url  String?
  is_edited  Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  author Users @relation("postAuthor", fields: [author_id], references: [id], onDelete: Cascade)

  commentPost Comments[] @relation("commentPost")
  likePost    Likes[]    @relation("likePost")

  @@index([author_id])
  @@index([created_at])
}

model Comments {
  id           String   @id @default(uuid())
  user_id      String
  post_id      String
  comment_text String
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now()) @updatedAt

  user Users @relation("commentUser", fields: [user_id], references: [id], onDelete: Cascade)
  post Posts @relation("commentPost", fields: [post_id], references: [id], onDelete: Cascade)

  //Self-relation
  parent_id String?
  parent    Comments?  @relation("commentReplies", fields: [parent_id], references: [id], onDelete: Cascade)
  replies   Comments[] @relation("commentReplies")

  likeComment Likes[] @relation("likeComment")

  @@index([parent_id])
  @@index([post_id])
}

model Likes {
  id         String   @id @default(uuid())
  user_id    String
  post_id    String?
  comment_id String?
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  user    Users     @relation("likeUser", fields: [user_id], references: [id], onDelete: Cascade)
  post    Posts?    @relation("likePost", fields: [post_id], references: [id], onDelete: Cascade)
  comment Comments? @relation("likeComment", fields: [comment_id], references: [id], onDelete: Cascade)

  @@unique([user_id, post_id])
  @@unique([user_id, comment_id])
}

model Notifications {
  id         String           @id @default(uuid())
  user_id    String
  sender_id  String?
  message    String
  metadata   Json?
  type       NotificationType
  created_at DateTime         @default(now())
  is_read    Boolean          @default(false)

  user   Users  @relation("NotificationReceiver", fields: [user_id], references: [id], onDelete: Cascade)
  sender Users? @relation("NotificationSender", fields: [sender_id], references: [id], onDelete: SetNull)
}

enum NotificationType {
  FOLLOW_CREATED
  MENTION
  CHAT_MESSAGE
  COMMENT_ADDED
  LIKE_POST
  SYSTEM
}

enum UserRole {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  DELETED
}

enum FollowStatus {
  PENDING
  ACCEPTED
  DECLINED
}
